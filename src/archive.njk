---
title: Archive
layout: 'base.njk'
---

<section>
  <h2>Recent Articles</h2>
  <ul>
    {%- for post in collections.post | reverse -%}
    <li>
      <article>
        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <a href="{{ post.url }}"><img src="{{ post.data.image }}" alt="{{ post.data.alt }}" title="{{ post.data.alt }}"/></a>
        <p>Published on {{ post.data.date }}</p>
        <p>{{ post.data.description }}... <a href="{{ post.url }}">Continue Reading</a></p>
      </article>
    </li>
    {%- endfor -%}
  </ul>
</section>